<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <ImageView
        android:id="@+id/redlinecSearch"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red_box" />

    <TextView
        android:id="@+id/txtSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Αναζήτηση"
        android:textColor="@color/secondary"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/redlinecSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lbSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/txt_search"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redlinecSearch" />

    <ImageView
        android:id="@+id/imgSearch"
        android:layout_width="320dp"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/button_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbSearch" />

    <ImageView
        android:id="@+id/iconsearch"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_search_two"
        app:layout_constraintStart_toStartOf="@+id/imgSearch"
        app:layout_constraintTop_toTopOf="@+id/imgSearch" />

    <TextView
        android:id="@+id/txtSearchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Search"
        android:textColor="@color/tertiary_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iconsearch"
        app:layout_constraintTop_toTopOf="@+id/imgSearch"
        app:layout_constraintVertical_bias="0.54" />

    <ImageView
        android:id="@+id/imgSearchSpyros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/anima_spyros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSearch" />

    <TextView
        android:id="@+id/txtSearchDesc"
        android:layout_width="204dp"
        android:layout_height="72dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/search_description"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/imgSearchSpyros"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSearch" />

    <ImageView
        android:id="@+id/bluecircleSearch"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/blue_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>